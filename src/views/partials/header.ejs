<header class="header">
  <h1><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Admin Panel' %></h1>
  <nav class="header-nav">
    <% if (typeof user !== 'undefined' && user) { %>
      <a href="/users" class="btn btn-secondary">Users</a>
      <% if (typeof showCreateButton === 'undefined' || showCreateButton) { %>
        <a href="/users/create" class="btn btn-success">+ Create User</a>
      <% } %>
      <a href="/profile" class="btn btn-primary">My Profile</a>
      <span>Welcome, <%= user.username %></span>
      <a href="/logout" class="btn btn-danger">Logout</a>
    <% } %>
  </nav>
</header>
